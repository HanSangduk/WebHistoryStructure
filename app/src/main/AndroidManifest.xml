        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StructureTestApp">
        <activity android:name=".MainActivity"
            android:taskAffinity="com.ram.structuretestapp.task.A">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".b.BMainActivity"
            android:taskAffinity="com.ram.structuretestapp.task.B">
        </activity>

        <activity android:name=".c.CMainActivity"
            android:taskAffinity="com.ram.structuretestapp.task.C">
        </activity>
    </application>

</manifest>